<script>



    async function fetchbookeddata() {
        try {
            // console.log(service)
            var res = await fetch('/user/fetchhelperbooked');
            res = await res.json();
            var records = res.records;
            console.log(records);

            var html = ``;
            for (var x of records) {

                html += `<tr>`
                html += `<td><div class=" col-md-4 mb-3" >

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Helper Details</h5>
        <p><strong>Name:</strong> <span id="name">${x.helper.name}</span></p>
        <p><strong>Gender:</strong> <span id="gender">${x.helper.gender}</span></p>
        <p><strong>Phone Number:</strong> <span id="number">${x.helper.number}</span></p>
        <p><strong>Email:</strong> <span id="email">${x.helper.email}</span></p>
        <p><strong>Service Type:</strong> <span id="gate">${x.helper.servicetype}</span></p>
        <p><strong>Availability:</strong> <span id="shift" style="background-color: #f15b26 ; border-radius: 10px">${x.helper.availability}</span></p>
        <p><strong>Medical:</strong> <span id="shift">${x.helper.medical}</span></p>
        <p><strong>Status:</strong> <span id="shift" class="text-success">${x.helper.status} By Admin</span></p>


                </div>
</div></div></td>`

                html += `</tr>`

            }
            document.getElementById('cards2').innerHTML = html;
        } catch (e) {
            console.log(e.message);
        }
    }





    async function fetchdata(service) {
        try {
            // console.log(service)
            var res = await fetch('/user/fetchhelperdata/'+service);
            res = await res.json();
            var records = res.records;
            // console.log(records);

            var html = ``;
            for (var x of records) {

                    html += `<tr>`
                    html += `<td><div class=" col-md-4 mb-3" >

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Helper Details</h5>
        <p><strong>Name:</strong> <span id="name">${x.name}</span></p>
        <p><strong>Gender:</strong> <span id="gender">${x.gender}</span></p>
        <p><strong>Phone Number:</strong> <span id="number">${x.number}</span></p>
        <p><strong>Service Type:</strong> <span id="gate">${x.servicetype}</span></p>
        <p><strong>Availability:</strong> <span id="shift" style="background-color: #f15b26 ; border-radius: 10px">${x.availability}</span></p>
        <p><strong>Medical:</strong> <span id="shift">${x.medical}</span></p>
        <p><strong>Status:</strong> <span id="shift" class="text-success">${x.status} By Admin</span></p>`
                    html+=`  <button type='button' onclick='showdata(${x.id})' data-bs-toggle='modal' data-bs-target='#exampleModal'class='btn btn-success btn-sm'>Book Now</button>


                </div>
</div></div></td>`

                    html += `</tr>`

            }
            document.getElementById('cards').innerHTML = html;
        } catch (e) {
            console.log(e.message);
        }
    }



    async function showdata(id)
    {
        document.getElementById("helperId").value=id;
    }

    async function booknow()
    {
        var helperId=document.getElementById("helperId").value;


        //
        // let timestamp=document.getElementById("date").value;
        // let dateObj = new Date(timestamp);
        // let issue = dateObj.toISOString().split("T")[0];




        // var date = issue;
        var date=document.getElementById("date").value;
        var instruction = document.getElementById("instruction").value;

        // console.log(gender)

        var res= await fetch('/user/booknow', {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({

                helperId: helperId,
                date: date,
                instructions:instruction,


            })
        })
        res = await res.json();
        console.log(res);
        if (res.error) {
            Qual.errordb("Error", res.message);
        } else {
            Qual.successdb("Success", res.message);


        }


    }





</script>





